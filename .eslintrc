{
  "plugins": [
    "react"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "quotes": ["error", "single", "avoid-escape"],
    "strict": ["error", "safe"],
    "indent": ["error", 2, {"VariableDeclarator": 2}],
    "no-console": ["error", {"allow": ["info", "warn", "error"]}],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  },
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
  },
  "parser": "babel-eslint"
}
