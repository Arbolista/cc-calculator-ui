.statusBtn {
    shadowColor: white;

    shadowOffset: 0 0;

    shadowOpacity: 0.5;
    shadowRadius: 3;
    margin: 0;
    width: 120;
    justifyContent: 'center';
    alignItems: 'center';
    borderRadius: 10
}

.statusBtnTextBase {
    fontSize: 20;
    fontWeight: 'bold'
}

.touchableDisabled {
    opacity: 0.5
}

.baseButton {
    width: 80;
    margin: 5;
    flexDirection: 'column';
    marginVertical: 0;
    flex: 1;
    padding: 10;
}

.baseNoteText {
    fontSize: 20;
    fontWeight: 'bold';
    textAlign: 'center'
}

.uNoteBtn {
    borderBottomLeftRadius: 10;
    borderBottomRightRadius: 10;
    shadowColor: black;
    shadowOffset: 2 2;  /* needs to be turned to object (height, width) */
    shadowOpacity: 1;
    shadowRadius: 2;
    justifyContent: 'flex-end'
}

.dNoteBtn {
    borderTopLeftRadius: 10;
    borderTopRightRadius: 10;
    shadowColor: black;
    shadowOffset: 2 2;
    shadowOpacity: 1;
    shadowRadius: 2;
    justifyContent: 'flex-start'
}

.page {
    backgroundColor: 'black';
    flex: 1
}

.header {
    height: 20;
    backgroundColor: 'white';
    marginBottom: 3
}

.statusLine {
    height: 100;
    paddingVertical: 10;
    flexDirection: 'row'
}

.notesLineBase {
    justifyContent: 'center';
    flexDirection: 'row';
    position: 'absolute';
    backgroundColor: 'transparent';
    top: 0;
    bottom: 0;
    left: 0;
    right: 0
}

.noteLine {
    flex: 1;
    flexDirection: 'row'
}

.wNoteLine {
}

.bNoteLine {
    paddingBottom: 90
}

.bNoteLineDown {
    paddingTop: 90
}

.bNoteLineL {
    paddingBottom: 60
}

.bNoteLineDownL {
    paddingTop: 60
}

.wNoteBtn {
    backgroundColor: white;
    borderColor: black
}

.bNoteBtn {
    backgroundColor: black;
    borderColor: white
}

.wNoteText {
    color: black
}

.bNoteText {
    color: white
}

.f1 {
    flex: 1;
}

.correct {
    background-color: green;
}

.correctText {
    color: white;
}

.wrong {
    background-color: red
}

.wrongText {
    color: white
}

.playing {
    background-color: lightblue
}

.playingText {
    color: black
}

.stats {
    fontSize: 14;
    color: '#aaa';
    marginTop: 10;
    marginLeft: 25;
    marginRight: 45
}

.statsVal {
    fontSize: 40;
    fontWeight: 'bold';
    textAlign: 'right';
    marginHorizontal: 25;
    color: '#eee';
}
